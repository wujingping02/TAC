.list {
    width: 50%;
    display: inline-block;
    padding-bottom: 28rpx;
    vertical-align: top;
    box-sizing: border-box;
}
.listLeft {
    padding-left: 40rpx;
    padding-right: 10rpx;
}
.listRight {
    padding-left: 10rpx;
    padding-right: 40rpx;
}
.box {
    width: 100%;
    margin-top: 28rpx;
    display: inline-block;
    background: #f9f9f9;
    border-radius: 20rpx;
    background: #ffffff;
    box-shadow: 1px 1px 3px rgba(0,0,0,0.1);
}
.imgBox {
    position: relative;
    border-radius: 20rpx 20rpx 0 0;
}
.eAge{
    position: absolute;
    top: 0;
    left: 0;
    border-radius: 20rpx 0 20rpx 0;
    background: #FF8100;
    font-size: 24rpx;
    color: #ffffff;
    padding: 20rpx;
}
.url{
    width: 100%;
    border-radius: 20rpx 20rpx 0 0;
}
.address{
    position: absolute;
    left: 20rpx;
    bottom: 20rpx;
    width: 50%;
    border-radius: 20rpx;
    background: rgba(0,0,0,0.60);
    font-size: 20rpx;
    color: #ffffff;
    padding: 0 10rpx;
    height: 40rpx;
    line-height: 40rpx;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    padding-left: 34rpx;
}
.address::before{
    content: "";
    width: 16rpx;
    height: 20rpx;
    background-image: url('data:image/png;base64,');
    background-size: 100% 100%;
    position: absolute;
    top: 10rpx;
    left: 10rpx;
}
.textBox {
    background: #ffffff;
    padding-left: 20rpx;
    padding-right: 20rpx;
    border-radius: 0 0 20rpx 20rpx;
    padding-bottom: 20rpx;
}
.name{
    font-size: 28rpx;
    color: #3D3B5E;
    line-height: 28rpx;
    padding-top: 30rpx;
    padding-bottom: 20rpx;
}
.price_unit {
    display: inline-block;
    font-size: 24rpx;
    color: #FF8100;
    padding-bottom: 22rpx;
}
.lessonTime {
    display: inline-block;
    font-size: 24rpx;
    color: #FF8100;
    padding-bottom: 22rpx;
}
.price{
    font-size: 36rpx;
    color: #FF8100;
    line-height: 36rpx;
}
.orgImg{
    width: 30rpx;
    height: 30rpx;
    border-radius: 15rpx;
}
.orgName{
    display: inline-block;
    margin-left: 20rpx;
    width: 70%;
    font-size: 24rpx;
    color: #9D9DAF;
    height: 30rpx;
    line-height: 30rpx;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.noAddress {
    width: 100%;
    position: absolute;
    text-align: center;
    top: 50%;
    font-size: 32rpx;
    color: #9D9DAF;
    line-height: 52rpx;
    left: 50%;
    transform: translateX(-50%);
}