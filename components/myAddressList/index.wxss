@import "../../app.wxss";

.addressListBox {
    width: 100%;
    height: 226rpx;
    border-bottom: 1px solid #E5E5E9;
    display: inline-block;
    position: relative;
}
.addressDetail {
    margin-top: 32rpx;
    width: 80%;
}
.addClass {
    display: inline-block;
    height: 54rpx;
    border-radius: 28rpx;
    border: 1px solid #FF8711;
    margin-top: 26rpx;
    font-size: 24rpx;
    color: #FF8711;
    line-height: 54rpx;
    padding: 0 22rpx;
}
.edit {
    font-size: 28rpx;
    color: #9D9DAF;
    position: absolute;
    width: 20%;
    text-align: center;
    border-left: 1px solid #E5E5E9;
    height: 48rpx;
    line-height: 48rpx;
    right: 0;
    top: 89rpx;
}
.noAddress {
    position: absolute;
    text-align: center;
    bottom: 0;
    font-size: 32rpx;
    color: #9D9DAF;
    line-height: 52rpx;
    left: 50%;
    transform: translateX(-50%);
}
.noAddress2 {
    bottom: 52rpx;
}