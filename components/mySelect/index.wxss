.box {
    width: 100%;
    display: inline-block;
    box-sizing: border-box;
}
.lable {
    font-size: 24rpx;
    color: #000000;
    line-height: 34rpx;
}
.val {
    width: 100%;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #333333;
    height: 80rpx;
    line-height: 80rpx;
    border: 2rpx solid #E5E5E9;
    border-radius: 12rpx;
    margin-top: 20rpx;
    padding: 0 4%;
    position: relative;
}
.prompt {
    width: 100%;
    height: 80rpx;
    overflow: hidden;
}
.prompt:after {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    content: "";
    width: 32rpx;
    height: 40rpx;
    background-image: url(data:image/png;base64,);
    background-repeat:no-repeat;
    background-size: 100% 100%;
}