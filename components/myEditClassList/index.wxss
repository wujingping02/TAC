@import "../../app.wxss";

.addressListBox {
    width: 100%;
    height: 226rpx;
    border-bottom: 1px solid #E5E5E9;
    display: inline-block;
    position: relative;
    padding-bottom: 36rpx;
}
.icon {
    width: 36rpx;
    height: 36rpx;
    position: absolute;
    top: 26rpx;
    left: 0;
}
.addressDetail {
    margin-top: 32rpx;
    font-size: 28rpx;
    color: #3D3B5E;
    line-height: 28rpx;
    margin-left: 44rpx;
}
.introd {
    font-size: 24rpx;
    color: #9D9DAF;
    height: 56rpx;
    line-height: 28rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-top: 25rpx;
    margin-left: 44rpx;
}
.addClassBox {
    text-align: right;
    /* padding-bottom: 36rpx; */
    box-sizing: border-box;
}
.addClass {
    display: inline-block;
    height: 54rpx;
    border-radius: 28rpx;
    border: 1px solid #FF8711;
    margin-top: 26rpx;
    font-size: 24rpx;
    color: #FF8711;
    line-height: 54rpx;
    padding: 0 22rpx;
    margin-left: 16rpx;
}
