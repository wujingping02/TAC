image{
	height: 180px;
}
swiper {
	display:block;
	height:180px;
}
.weui-panel {
	margin-top:0px;
}
.weui-desc{
  font-size:12pt;
  margin-bottom: 3%;
}

.weui-cell_primary{
  font-size: 12pt;
}
.place button[size="mini"] {
	padding:0 0.65rem;
	line-height: 2.1;
	margin-right: 2.5%;
	font-size: 0.7rem;
}
button[type="primary"][plain] {
  color:#ff9900;
  border:1px solid #ff9900;
  background-color:transparent;
}
.button-hover[type="primary"][plain] {
  color:rgba(255, 153, 0, 0.6);
  border:1px solid rgba(255, 153, 0, 0.6);
  background-color:transparent;
}

.icon_line{
	padding-top: 2.5%;
	padding-left: 12px;
	border-left: 0.8px solid #D9D9D9;
}
.weui-btn {
	margin-top:0%;
}
.weui-cell {
	padding:8px 15px 8px 15px;
}
.weui-titles{
  padding:8px 15px 6px 15px;
}
.time_f{
	font-size: 0.8rem;
	padding-top: 9%;
}



/*reserve预定*/
.reserve{
	margin-top:4%;
  border-top: 0.5px solid #D9D9D9;
}
.reserve .weui-cell__ft {
	padding-top: 2%;
  
}
.reserve button[type="primary"] {
	color:#FFFFFF;
	background-color:#ff9900;
}
button[size="mini"] {
	line-height:2.3;
	padding:0 1em;
}
/*评价*/
.assess{
  border-top: 0.5px solid #D9D9D9;
	margin-top: 4%;
}
.assess .weui-desc {
	color:#999999;
	font-size:12pt;
	margin-bottom:0%;
}
.assess .weui-cell__hd{
	margin-top: -5%;
}
.assess .weui-cell__ft{
	margin-top: -6%;
	font-size: 0.85rem;
}
.assess .weui-cell {
	padding:8px 15px 0px 15px;
}
.assess .content {
	padding:0px 15px 8px 15px;
}
.assess .weui-titles{
	padding: 8px 15px;
}
.assess .content::before {
	border-top:none;
	color:#D9D9D9;
}
.assess .content .weui-desc {
	color:#999999;
	font-size:14px;
	padding-left: 8%;
	margin-bottom:0%;
}