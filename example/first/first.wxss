.page__bd_spacing{
	

}
/*hd*/
.text{
	margin-top: 8%;
	font-size: 16px;
	text-align: center;
}

/*searchbar*/
.location{
	flex: 1;
} 
.city{
	font-size: 16px;
	color:#fff;
	float: left;
	line-height: 28px;
}
.weui-search-bar{
	display: flex;
	border: none;
	background-color: #39c3f2;
}

.weui-search-bar__form {
	flex:4;
	border-radius:16px;
}
.weui-search-bar__label {
	border-radius:16px;
}

/*bd*/
.placeholder{
	flex: 1;
	text-align: center;
}
.weui-flex{
	padding-top: 3%;
}
.font{
	font-size: 0.8rem;
}
.chooseItem{
	background-color: #fff;
}
/*content*/
.panel-title{
	font-size: 0.85rem;
	color: #000;
}
.weui-cell__bd {
    font-size: 0.75rem;
}
.weui-panel__hd {
	padding:10px 10px 10px 15px;
}
.weui-media-box {
	padding:12px 15px;
}

/*ft*/
.page__ft{
	margin-top: 10%;
	padding: 0 5%;
}
button[type="primary"] {
	color:#FFFFFF;
	background-color:#39c3f2;
}
.button-hover[type="primary"] {
	color:rgba(255, 255, 255, 0.6);
	background-color:rgba(25, 185, 239, 0.8);

}
/*九宫格*/
.weui-grid {
	padding:11.88px 10px;
	padding-bottom: 8px;
	width:12.5%;
	overflow: hidden;
	border-right:none;
	border-bottom:none;
}
.weui-grids {
	border-top:none;
	border-left:none;
}
.weui-grid__icon {
	width:2rem;
	height:2rem;
}
.chooseItem{
	width: 100%;
	overflow: hidden;
}
.scroll-view_H{
	white-space: nowrap;
	width: 200%;
}
.weui-grid__label {
	margin-top:5px;
	color:#000000;
	font-size:12px;
}


