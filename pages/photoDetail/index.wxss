.operatBox {
    width: 100%;
    height: 96rpx;
    line-height: 96rpx;
    background: #ffffff;
    position: relative;
    z-index: 2;
    margin-top: 125rpx;
}
.recommendBox {
    height: 96rpx;
    line-height: 96rpx;
    display: inline-block;
    position: relative;
    margin-left: 30rpx;
    top: -4rpx;
    background-color: #ffffff;
}
.recommend {
    display: inline-block;
    font-size: 32rpx;
    color: #3D3B5E;
}
.recommend.active {
    font-size: 32rpx;
    color: #3D3B5E;
    font-weight: 800;
    background-color: transparent!important;
    position: relative;
    z-index: 9;
}
.recommendButtom {
    position: absolute;
    bottom: 32rpx;
    left: 0;
    width: 60rpx;
    height: 10rpx;
    border-radius: 4rpx;
    background-image: linear-gradient(236deg, #FDCF33 0%, #FF8814 100%);
}
.active {
    background: rgba(255,129,0,0.10);
}
.active .icon {
    display: inline-block;
    position: absolute;
}
