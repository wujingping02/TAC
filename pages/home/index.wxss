.home {
    min-height: 100vh;
}
.searchBg {
    width: 100%;
    height: 360rpx;
    display: inline-block;
    background: url('https://ss3.bdstatic.com/70cFv8Sh_Q1YnxGkpoWK1HF6hhy/it/u=1996410545,3787547474&fm=26&gp=0.jpg');
    background-size: 100% 100%;
    position: relative;
    z-index: 2;
}
.searchBox {
    width: 70%;
    margin-top: 2vh;
    padding-left: 40rpx;
    box-sizing: border-box;
}
.operatBox {
    width: 100%;
    height: 96rpx;
    line-height: 96rpx;
    background: #ffffff;
    position: relative;
    z-index: 2;
}
.recommendBox {
    height: 96rpx;
    line-height: 96rpx;
    display: inline-block;
    position: relative;
    margin-left: 30rpx;
    top: -4rpx;
}
.recommend {
    font-size: 32rpx;
    color: #3D3B5E;
    font-weight: 800;
    position: relative;
    z-index: 9;
}
.recommendButtom {
    position: absolute;
    bottom: 32rpx;
    left: 0;
    content: "";
    width: 60rpx;
    height: 10rpx;
    border-radius: 4rpx;
    background-image: linear-gradient(236deg, #FDCF33 0%, #FF8814 100%);
}
.age {
    display: inline-block;
    font-size: 28rpx;
    color: #3D3B5E;
    height: 96rpx;
    line-height: 96rpx;
    width: 86rpx;
    position: relative;
    top: -4rpx;
    margin-left: 30rpx;
}
.age:after {
    position: absolute;
    top: 38rpx;
    right: 0;
    content: "";
    width: 32rpx;
    height: 26rpx;
    background-image: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABAAAAAQCAYAAAAf8/9hAAAAfElEQVQ4T2NkoBAwUqifYTgZcP78eYO/f/8eYGRk5McXLv/////IzMzsYGhoeAGkDiUMCBmCrhnDAJAALkOwacZqAEjw7NmzCQwMDPORvcLExORoaGh4AN17OKMRzZBEY2PjBdjCBm86gBrCgEszTi+QkjqHU0okxd/IagGDIjIRy7kpHgAAAABJRU5ErkJggg==);
    background-repeat:no-repeat;
    background-size: 100% 100%;
}
.upArrow:after {
    background-image: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABAAAAAQCAYAAAAf8/9hAAAAe0lEQVQ4T2NkoBAwUqifYZAbcP78eQGQFw0NDT/g8ipOL4A0//37dz9IIzMzsyMuQ7AaANPMyMhoADLg////F3AZgmEAumaY03EZgmIALs34DIEbQEgzLkPABhCrGZshYAPOnDkTAAswYlMmKExMTEw2DPKUSIx3KPYCAH1kUBHXykmoAAAAAElFTkSuQmCC);
    background-repeat:no-repeat;
    background-size: 100% 100%;
}
.chooseAgeBox {
    width: 100%;
    background: #ffffff;
    position: absolute;
    top: 96rpx;
    z-index: 9;
}
.chooseAge {
    height: 80rpx;
    font-size: 28rpx;
    color: #3D3B5E;
    line-height: 80rpx;
    position: relative;
}
.active {
    background: rgba(255,129,0,0.10);
}
.active .icon {
    display: inline-block;
    position: absolute;
}
.icon {
    display: none;
    width: 8rpx;
    height: 80rpx;
    background: #FF8100;
}
.chooseAgeText {
    margin-left: 60rpx;
}
