.nowClassBox {
    font-size: 32rpx;
    color: #3D3B5E;
    margin-top: 56rpx;
    margin-bottom: 53rpx;
    text-align: center;
}
.teac_url {
    position: absolute;
    left: 40rpx;
    top: 50rpx;
    width: 120rpx;
    height: 120rpx;
    border-radius: 100%;
}
.teac_box_right {
    width: 100%;
}
.teac_time {
    font-size: 24rpx;
    color: #3D3B5E;
    margin-top: 48rpx;
}
.teac_lessonName,.teac_teacher {
    font-size: 28rpx;
    color: #3D3B5E;
}
.teac_lessonName {
    margin-top: 30rpx;
}
.teac_teacher {
    margin-bottom: 31rpx;
}
.bigBox {
    width: 100%;
    border-radius: 44rpx;
    display: inline-block;
    box-shadow: 0 2px 8px 0 rgba(0,0,0,0.16);
    margin-bottom: 32rpx;
}
.classBoxRight {
    width: 100%;
    padding-right: 40rpx;
    box-sizing: border-box;
    display: inline-block;
    padding-left: 33%;
    position: relative;
}
.buttomBox {
    width: 100%;
    border-top: 1px solid #E5E5E9;
    padding: 25rpx 25rpx 25rpx 20%;
    position: relative;
    box-sizing: border-box;
}
.bz {
    width: 20%;
    font-size: 24rpx;
    color: #9D9DAF;
    position: absolute;
    left: 40rpx;
    top: 50%;
    transform: translateY(-50%);
}
.remark {
    font-size: 24rpx;
    color: #666666;
    width: 100%;
    height: 80rpx;
}
.rollCall,.photo {
    display: inline-block;
    width: 140rpx;
    height: 54rpx;
    line-height: 54rpx;
    text-align: center;
    font-size: 24rpx;
    border-radius: 54rpx;
    background: #ffffff;
    color: #FF8814;
    border: 1px solid #FF8814;
}
.active {
    color: #ffffff;
    background: #FF8814;
}
.rollCall {
    margin: 30rpx 20rpx 40rpx 0;
}