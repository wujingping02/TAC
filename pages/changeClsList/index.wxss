.bigBox {
    padding: 155rpx 40rpx;
}
.box {
    width: 100%;
    /* height: 270rpx; */
    background: #FFFFFF;
    box-shadow: 0 2px 8px 0 rgba(0,0,0,0.16);
    border-radius: 44rpx;
    position: relative;
    padding-left: 164rpx;
    margin-top: 32rpx;
    box-sizing: border-box;
    padding-bottom: 49rpx;
}
.kidImg {
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    left: 32rpx;
    top: 50%;
    transform: translateY(-50%);
    border-radius: 50%;
}
.leftBox {
    width: 160rpx;
    display: inline-block;
}
.name {
    margin-top: 38rpx;
    font-size: 28rpx;
    color: #3D3B5E;
}
.teacher {
    font-size: 28rpx;
    color: #3D3B5E;
    margin-top: 20rpx;
}
.change {
    width: 140rpx;
    height: 54rpx;
    line-height: 54rpx;
    border-radius: 54rpx;
    background: #FF8711;
    color: #ffffff;
    margin-top: 33rpx;
    font-size: 24rpx;
    text-align: center;
}
.date {
    position: absolute;
    top: 54rpx;
    right: 32rpx;
    font-size: 24rpx;
    color: #9D9DAF;
}