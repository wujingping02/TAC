.sortKey {
    width: 100vw;
    height: 120rpx;
    line-height: 120rpx;
    background: #F9F9FA;
    border-radius: 100rpx 100rpx 0 0;
    position: relative;
}
.classSort,.teacherSort {
    display: inline-block;
    width: 50%;
    text-align: center;
    font-size: 28rpx;
    color: #3D3B5E;
}
.teacherSort {
    float: right;
}
.active {
    font-size: 16px;
    color: #3D3B5E;
    font-weight: 800;
    position: relative;
}
.active::after {
    content: "";
    display: inline-block;
    width: 128rpx;
    height: 8rpx;
    background: #FF8100;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    border-radius: 2rpx;
}
.bgBox {
    width: 100%;
    height: 100rpx;
    background: #F9F9FA;
}
.classListBox {
    border-radius: 100rpx;
    padding-bottom: 40rpx;
    transform: translateY(-100rpx);
    background: #ffffff;
    box-shadow: 0 2px 8px 0 rgba(0,0,0,0.16);
}
.addCustomize {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    right: 210rpx;
    top: 50%;
    transform: translateY(-50%);
}
.addCustomizeClass {
    font-size: 28rpx;
    color: #FF8814;
    position: absolute;
    right: 64rpx;
    top: 50%;
    transform: translateY(-50%);
}
.noAddress {
    width: 100%;
    position: absolute;
    text-align: center;
    top: 50%;
    font-size: 32rpx;
    color: #9D9DAF;
    line-height: 52rpx;
    left: 50%;
    transform: translateX(-50%);
}