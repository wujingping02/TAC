<view class="mine orgDetail">
  <view class="avatarBox">
    <view class="headerBox">
      <!-- <image bind:tap="back" class="back"src="../../images/back.png"/> -->
      <text class="title">个人中心</text>
    </view>
    <view class="avatarBg">
      <image class="avatarImg" src="{{ userInfo.avatar }}"/>
    </view>
    <view class="avatarName">{{ userInfo.name }}</view>
  </view>
  <view class="listBox">
    <view wx-if="{{ userInfo.userType === '10' || userInfo.userType == '20' || userInfo.userType == '30' }}" bindtap="toPersonInfo">
      <image src="../../images/home.png"/>
      <text class="text">基本信息</text>
    </view>
    <view wx-if="{{ userInfo.userType === '10'}}" bindtap="toOrgDetail">
      <image src="../../images/home.png"/>
      <text class="text">机构介绍</text>
    </view> 
    <view wx-if="{{ userInfo.userType === '30' }}" bindtap="toOrgDetail">
      <image src="../../images/home.png"/>
      <text class="text">老师介绍</text>
    </view> 
    <view wx-if="{{ userInfo.userType === '10' }}" bindtap="toEditAddress">
      <image src="../../images/home.png"/>
      <text class="text">地址管理</text>
    </view>
    <view wx-if="{{ userInfo.userType === '10' }}" bindtap="toTeacherList">
      <image src="../../images/home.png"/>
      <text class="text">教师管理</text>
    </view>
    <view wx-if="{{ userInfo.userType === '10' }}" bindtap="toAssistantList">
      <image src="../../images/home.png"/>
      <text class="text">助教管理</text>
    </view>
    <view wx-if="{{ userInfo.userType === '10' }}" bindtap="toEditCourse">
      <image src="../../images/home.png"/>
      <text class="text">课程列表</text>
    </view>
    <view wx-if="{{ userInfo.userType === '20' || userInfo.userType === '30' }}" bindtap="toOrgList">
      <image src="../../images/home.png"/>
      <text class="text">机构列表</text>
    </view>
    <view wx-if="{{ userInfo.userType === '30' || userInfo.userType === '40' }}" bindtap="toChangeClsList">
      <image src="../../images/home.png"/>
      <text class="text">换补课列表</text>
    </view>
    <view wx-if="{{ userInfo.userType === '40' }}" bindtap="toMyPhoto">
      <image src="../../images/home.png"/>
      <text class="text">我的相册</text>
    </view>
    <view wx-if="{{ userInfo.userType === '40' }}" bindtap="toMyChildren">
      <image src="../../images/home.png"/>
      <text class="text">子女信息</text>
    </view>
    <view wx-if="{{ userInfo.userType === '20' || userInfo.userType === '30' || userInfo.userType === '40' }}" bindtap="toClassList">
      <image src="../../images/home.png"/>
      <text class="text">班级列表</text>
    </view>
    <view wx-if="{{ userInfo.userType === '40' }}" bindtap="saomadingke">
      <image src="../../images/home.png"/>
      <text class="text">扫码定课</text>
    </view>
  </view>
</view>
