.rolePage {
    padding: 120rpx 40rpx 40rpx 40rpx;
    box-sizing: border-box;
}
.roleTitle {
    font-size: 48rpx;
    color: #3D3B5E;
}
.rolePropmt {
    font-size: 28rpx;
    color: #3D3B5E;
    padding-top: 14rpx;
    padding-bottom: 12rpx;
}
.roleBox {
    width: 100%;
    height: 240rpx;
    position: relative;
    margin-top: 22rpx;
    border-radius: 20rpx;
}
.roleImg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 240rpx;
    transform: scale(1.06);
    border-radius: 20rpx;
}
.roleImg.active {
    border: 1px solid #FF8814 ;
    box-shadow: 0 0 10px 0 rgba(255,136,20,0.55);
}
.role {
    position: absolute;
    top: 42rpx;
    left: 48rpx;
    font-size: 32rpx;
    color: #3D3B5E;
    z-index: 1;
}
.roleCon {
    position: absolute;
    top: 103rpx;
    left: 48rpx;
    font-size: 24rpx;
    color: #9D9DAF;
    z-index: 1;
}