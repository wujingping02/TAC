.page {
    display: inline-block;
    border-radius: 100rpx 100rpx 0 0;
    padding-left: 40rpx;
    padding-right: 40rpx;
    box-sizing: border-box;
}
.toast>.contBox {
    position: fixed;
    background: #fff;
    width: 100%;
    bottom: 0;
    padding: 40rpx;
    box-sizing: border-box;
    z-index: 999;
    display: inline-block;
    max-height: 80vh;
    overflow-y: scroll;
    overflow-x: hidden;
}
.cancel {
    display: inline-block;
    width: 45%;
    height: 96rpx;
    line-height: 96rpx;
    background: #ffffff;
    color: #FF8711;
    border-radius: 58rpx;
    border: 1px solid #FF8711;
    text-align: center;
    margin-top: 60rpx;
}
.sure {
    float: right;
    background: #FF8711;
    color: #ffffff;
}
.prompt {
    font-size: 28rpx;
    color: #3D3C5C;
    margin-top: 40rpx;
}