.btnBox {
    width: 100%;
    background: red;
    height: 196rpx;
    display: inline-block;
    background: #ffffff;
}
.pageBox {
    padding-top: 128rpx;
    background: #FFCE00;
}
.avatarBox {
    width: 100%;
    height: 500rpx;
    background-color: #FFCE00;
    text-align: center;
    display: inline-block;
    border-radius: 0 0 72rpx 72rpx;
}
.avatarBg {
    display: inline-block;
    width: 240rpx;
    height: 240rpx;
    border-radius: 120rpx;
    background: #fff;
    margin-top: 72rpx;
}
.avatarImg {
    width: 224rpx;
    height: 224rpx;
    border-radius: 112rpx;
    background: #fff;
    position: relative;
    top: 8rpx;
}
.topBG {
    margin-top: 128rpx;
    height: 120rpx;
    background: #FFCE00;
}
.addressBox {
    padding: 0 40rpx;
    background: #ffffff;
    transform: translateY(-100rpx);
    border-radius: 100rpx 100rpx 0 0;
    min-height: 45vh;
    height: 45vh;
    padding-top: 14rpx;
    position: relative;
}
.bottomBox {
    width: 100%;
    height: 116rpx;
    background: #fff;
}